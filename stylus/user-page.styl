.userpage-profile-container
    display flex
    justify-content center
    grid-column-start 1
    grid-column-end 4

    .userpage-profile-image-contents
        margin-left 2em

        p
            margin-left 2em
            line-height 1.1em
            width 30em

        button 
            margin-top 1em
            padding 1em 4em
            border-radius 0.4em
            border 0.1em solid lightgrey
            background-color #FAFAEE
            color black

            font-size 0.8em
            font-family Barlow
            font-weight 100
            font-style italic
            margin-right 2em

    img 
        width 5em
        height auto

.userpage-profile-description
    grid-column-start 4
    grid-column-end 7

.userpage-button-container
    grid-column-start 8
    grid-column-end 9
    display flex
    flex-direction column

    button
        padding 1em 4em
        border-radius 0.4em
        border 0.1em solid lightgrey
        background-color #FAFAEE
        color black

        font-size 0.8em
        font-family Barlow
        font-weight 100
        font-style italic


.userpage-font-block-container
    grid-column-start 1
    grid-column-end 9
    border-bottom 0.1em solid lightgrey

    button
        margin 1em 1em
        background-color #FAFAEE
        color black

        font-size 0.8em
        font-family Barlow
        font-weight 600

.filter-container
        grid-column-start 1
        grid-column-end 9
        margin-top 2em
        display grid
        grid-template-columns repeat(4, 25%)
        gap 1rem   

        .filter-font-block
            border 0.05em solid grey 
            border-radius 0.4em
            
            color: black; /* blue colors for links too */
            text-decoration: none; /* no underline */
            
            .filter-font-bookmark
                display flex
                justify-content space-between
                align-items center
                margin-top 1em
                margin-right 1em
                text-decoration: none; /* no underline */

                .filter-font-bookmark-row
                    display flex

                    input[type=checkbox]
                        margin-bottom 0em
                        margin-right 0.5em
                        text-decoration: none; /* no underline */

        
            .filter-font-block-text
                text-align center
                margin 2.5em 0em
                text-decoration: none
                h1
                    margin-top 0.3em
                    margin-bottom 0.3em
                    text-decoration: none
                

            .filter-font-tags-container
                overflow: auto
                white-space nowrap
                display grid
                grid-template-columns: repeat(auto, auto) 
                grid-template-rows: 1fr
                // justify-content center
                margin-bottom 2em
                max-width 100%
                text-decoration: none

                .filter-font-tags
                    text-align left
                    grid-row 1/2   
                    grid-column-start: span 1
                    // display inline
                    align-items center
                    padding 0.8em
                    border 0.05em solid 
                    border-radius 0.2em
                    margin-right 0.3em
                    display: flex
                    flex-wrap: nowrap

                    img
                        width auto
                        height 0.6em
                        margin-right 0.5em

                    h6    
                        word-wrap none
                        font-family Fanwood
                        font-style italic
                        

        span
            font-style italic