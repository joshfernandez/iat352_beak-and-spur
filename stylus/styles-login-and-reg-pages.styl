/* REGISTER AND LOGIN PAGES */

.logging-out-page
    main
        display grid
        justify-content: center

.register-complete-page, .login-complete-page, .login-page, .register-page
    main 
        padding-top: 5rem
        h1
            grid-column: 2/-2
            text-align: center
            grid-row: 1/2

        form 
            grid-column: 3/-3
            grid-row: 2/3
            justify-self: center
            border: 1px solid #A2A2A2; 
            border-radius: 0.375rem;
            padding: 1.5rem;
        
            input[type=submit]
                display: block
                margin 1rem auto .5rem auto
            h4
                padding: 1em

    

            p
                margin: .5rem 0 0rem 0;
                font-weight: 300;
                font-size: 1.2rem
            /* Ensure that form input is not bolded. */
            

            input 
                border-radius: 0.25rem;
                font-family: Helvetica, sans-serif;
                margin-bottom: .5rem
            

            input[type=text],input[type=password] 
                border: 1px solid #A2A2A2;
                padding: 0.75rem;
                margin: 0.5rem 0 0 0;

                font-size: 1.5rem;
                color: #212121;
                

            input[type=submit]
                border: 1px solid #FF4F42;
                padding: .75rem 1.5rem;
                margin: 1.5rem 0 0 0;

                font-size: 1.5rem;
                font-weight: bold;
                color: #FFFFFF;
                background-color: #FF4F42;
                transition: background-color 0.5s ease-out;
            

            input[type=submit]:active,
            input[type=submit]:hover,
            input[type=submit]:focus 
                background-color: #FF4F42;
                border-color: #FF4F42 0.5s ease-out;

.login-complete-container
    grid-column-start 1
    grid-column-end 5
            
.register-complete-container
    grid-column-start 1
    grid-column-end 6