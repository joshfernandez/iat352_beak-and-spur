  font-weight: 100;
}

// loading League Gothic
@font-face {
  font-family: LeagueGothic;
  src: url("../assets/font/LeagueGothic/LeagueGothic-Regular.otf");
  font-weight: 900;
}

@font-face {
  font-family: Fanwood;
  src: url("../assets/font/Fanwood/FanwoodText-Regular.ttf");
  font-weight: 400;
}
@font-face {
  font-family: Fanwood;
