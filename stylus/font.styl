/* loading IBM Plex Sans */
@font-face {
  font-family: IBM-Plex-Sans;
  src: url("../assets/font/IBM/IBMPlexSans-SemiBold.ttf");
  font-weight: 900;
}

/* loading Barlow */
@font-face {
  font-family: Barlow;
  src: url("../assets/font/Barlow/Barlow-Black.ttf");
  font-weight: 900;
}
