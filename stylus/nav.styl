header 
    height 10vh
header nav
    width 100%
    padding 1.5em 1em
    display flex
    justify-content space-between
    align-items center
    background #FAFAEE

    // input[type=text]
    //     padding 1rem
    //     background: #fafaee
    //     border-bottom: .5px solid grey
    //     // padding
        // min-width 
    .right-links
        a
            text-decoration: none
            color black
            margin 0 .5rem
        font-weight: 300

    #nav-home-button
        font-weight: 700
        text-decoration: none
        color: black

        font-size: 1.1rem

    #nav-search-button
        margin-left: 1rem
        font-weight: 300
        
        text-decoration: none
        color: black
        font-size: 1rem

    
    .dropbtn
        background-color transparent
        padding 16px
        font-size 1rem
        border none
        cursor pointer

    .dropdown
        position relative
        display inline-block
        img
            width 2rem
        &:hover
            .dropdown-content
                display block

    .dropdown-content
        display none
        position absolute
        right 0
        // background-color #f9f9f9
        min-width 160px
        // box-shadow 0px 8px 16px 0px rgba(0, 0, 0, 0.2)
        border: 1px solid #A2A2A2;
        border-radius: .5rem  
        z-index 1
        a
            background #FAFAEE
            color black
            padding 12px 16px
            text-decoration none
            display block
            &:first-child
                border-top-left-radius: .5rem;
                border-top-right-radius: .5rem; 
                
            &:last-child
                border-bottom-left-radius: .5rem;
                border-bottom-right-radius: .5rem; 
            &:hover
                background-color #A2A2A2